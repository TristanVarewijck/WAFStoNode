<!DOCTYPE html>
<html lang="en">
  <%- include('partials/layout') %>

  <body>
    <!-- TEMPLATE PAGE -->
    <main data-route="template">
      <nav>
        <ul>
          <li>
            <a aria-label="Homepage" href="/"></a>
          </li>

          <li>
            <a
              aria-label="Twitter opener"
              href="https://twitter.com/intent/tweet"
              target="_blank"
            ></a>
          </li>
        </ul>
      </nav>
      <section>
        <article>
          
          <div>
            <div>
              <div><img src="<%=detailItem.img%>" alt="article image" /></div>
            </div>
            <h2><%=detailItem.title%></h2>
            <div>
              <small
                ><i class="fa-solid fa-file-signature"></i
                ><%=detailItem.author%></small
              >
              <div>
                <button form="speechForm" type="submit">
                  <i class="fa-solid fa-headphones"></i>
                </button>
                <button class="hidden" type="button">
                  <!-- default state is "hidden"-->
                  <i class="fa-solid fa-stop"></i>
                </button>
              </div>
              <small
                ><i class="fa-solid fa-clock"></i
                ><%=detailItem.publishedAt%></small
              >
            </div>
        </article>
        <form id="speechForm">
          <p role="textbox"></p>
        </form>
      </section>
    </main>
  </body>
</html>
